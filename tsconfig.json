{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015.promise", "es6", "esnext.asynciterable"],
    "allowJs": true,
    "outDir": "./dist/client/",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
